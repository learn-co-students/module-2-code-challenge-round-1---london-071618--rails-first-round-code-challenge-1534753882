<h2>All Heroines</h2>
<h3>Search by Superpower:</h3>
<%= form_tag(heroines_path, method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<br>
<% if @heroines.present? %>
  <%= render @heroines %>
<% else %>
  <p>There are no heroines with superpowers containing the term(s) <%= params[:q] %>.</p>
  <%= link_to 'Click here to see all heroines', heroines_path %>

<% end %>

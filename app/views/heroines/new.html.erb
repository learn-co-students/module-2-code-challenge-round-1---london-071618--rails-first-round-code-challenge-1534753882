<h1>Create a Heroine!</h1>

<% if flash[:errors] %>
<ul>
<%= flash[:errors].each do |e| %>
<li><% e %> </li>
<% end %>
<% end %>
</ul>

<%= form_for @heroine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :super_name %>
  <%= f.text_field :super_name %>
  <br>
  <%= f.collection_select :power_id, Power.all, :id, :name %>
  <br>
  <%= f.submit %>
<% end %>
